<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="@dimen/adapter_height"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <in.religareweather.com.util.CustomTextRegular
        android:id="@+id/day_txt"
        style="@style/forecast_day"
        android:layout_marginLeft="@dimen/margin_temp"
        android:gravity="center"
        android:text="Monday"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <in.religareweather.com.util.CustomTextRegular
        android:id="@+id/forecast_temp_txt"
        style="@style/forecast_day"
        android:layout_marginRight="@dimen/margin_temp"
        android:text="@string/Celsius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bg_color"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
